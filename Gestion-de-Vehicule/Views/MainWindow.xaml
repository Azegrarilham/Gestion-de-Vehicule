<Window x:Class="Gestion_de_Vehicule.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Gestion de Véhicules" 
        Height="743" 
        Width="1300"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- Modern Styles -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16 10"/>
            <Setter Property="Margin" Value="0 0 10 0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1976D2"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#1976D2"/>
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="0.98" ScaleY="0.98"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#212121"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12 10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Grid>
                            <Border x:Name="border" 
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="6"
                                    SnapsToDevicePixels="True">
                                <ScrollViewer x:Name="PART_ContentHost" 
                                              Focusable="false" 
                                              HorizontalScrollBarVisibility="Hidden" 
                                              VerticalScrollBarVisibility="Hidden"/>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#2196F3"/>
                                <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="VehicleItemStyle" TargetType="ListViewItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListViewItem">
                        <Border x:Name="Bd" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                Padding="15"
                                Margin="0 0 0 8">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#E3F2FD"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#E3F2FD"/>
                                <Setter TargetName="Bd" Property="BorderBrush" Value="#2196F3"/>
                                <Setter TargetName="Bd" Property="BorderThickness" Value="2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Shadow Effect Resource -->
        <DropShadowEffect x:Key="ShadowEffect" BlurRadius="0" ShadowDepth="0" Color="#20000000"/>
    </Window.Resources>

    <Grid Background="#F5F7FA">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="450"/>
        </Grid.ColumnDefinitions>

        <!-- Left Panel: Vehicle List -->
        <Border Grid.Column="0" 
                Margin="20,20,0,20" 
                Background="White"
                CornerRadius="12"
                BorderBrush="#E0E0E0"
                BorderThickness="1"
                Padding="20"
                Effect="{StaticResource ShadowEffect}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <StackPanel Grid.Row="0">
                    <TextBlock Text="🚗 Liste des Véhicules" 
                               FontSize="26"
                               FontWeight="Bold"
                               Foreground="#1A237E"
                               Margin="0 0 0 20">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="#1A237E"  BlurRadius="0" ShadowDepth="0" Opacity="0.1"/>
                        </TextBlock.Effect>
                    </TextBlock>

                    <StackPanel Orientation="Horizontal" Margin="0 0 0 15">
                        <Button Content="📋 Afficher les Véhicules" 
                                Style="{StaticResource ModernButton}"
                                Command="{Binding AfficherVehicules}"/>

                        <TextBlock Text="{Binding Vehicules.Count, StringFormat='{}Total: {0} véhicules'}"
                                   Foreground="#757575"
                                   VerticalAlignment="Center"
                                   Margin="10,0,0,0"/>
                        <StackPanel Orientation="Horizontal" Margin="270,0,0,0" HorizontalAlignment="Right">
                            <TextBlock Grid.Column="0" Text="Filtrer par type:" 
                            FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <ComboBox Grid.Column="1" SelectedValue="{Binding FiltreType, UpdateSourceTrigger=PropertyChanged}" SelectedValuePath="Content" Width="100" Height="30" VerticalContentAlignment="Center" FontSize="14">
                                <ComboBoxItem Content="Tous" IsSelected="True"/>
                                <ComboBoxItem Content="Voiture"/>
                                <ComboBoxItem Content="Moto"/>
                                <ComboBoxItem Content="Camion"/>
                            </ComboBox>
                        </StackPanel>
                    </StackPanel>
                    
                </StackPanel>

                <!-- Vehicle List -->
                <Border Grid.Row="1" 
                        BorderBrush="#E0E0E0" 
                        BorderThickness="1"
                        CornerRadius="8"
                        Margin="0 0 0 15">
                    <ListView ItemsSource="{Binding VehiculesFiltres}"
                              SelectedItem="{Binding SelectedVehicule}"
                              ItemContainerStyle="{StaticResource VehicleItemStyle}"
                              ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                              Background="Transparent"
                              BorderThickness="0">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Vehicle Icon -->
                                    <Border Grid.Column="0" 
                                            Width="50" 
                                            Height="50" 
                                            Background="#E3F2FD"
                                            CornerRadius="8"
                                            Margin="0 0 15 0">
                                        <TextBlock Text="🚗" 
                                                   FontSize="24"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"/>
                                    </Border>

                                    <!-- Vehicle Details -->
                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="{Binding Type, StringFormat='{}{0}'}" 
                                                   FontWeight="Bold" FontSize="14"
                                                   Foreground="#2196F3"/>
                                        <TextBlock Text="{Binding Marque, StringFormat='{}Marque: {0}'}"
                                                   FontSize="16"
                                                   FontWeight="SemiBold"
                                                   Foreground="#212121"/>
                                        <TextBlock Text="{Binding Modele, StringFormat='{}Modèle: {0}'}"
                                                   FontSize="14"
                                                   Foreground="#757575"
                                                   Margin="0 5 0 0"/>
                                        <StackPanel Orientation="Horizontal" Margin="0 5 0 0">
                                            <TextBlock Text="{Binding NomberPlaces, StringFormat='{}Places: {0}'}"
                                                       FontSize="12"
                                                       Foreground="#757575"
                                                       Margin="0 0 15 0"/>
                                            <TextBlock Text="{Binding Cylindree, StringFormat='{}Cylindrée: {0}cc'}"
                                                       FontSize="12"
                                                       Foreground="#757575"
                                                       Visibility="Visible"/>
                                            <TextBlock Text="{Binding CapaciteCharge, StringFormat='{}Capacite: {0}T'}"
                                                       FontSize="12"
                                                       Foreground="#757575"
                                                       Margin="15 0 0 0"
                                                       Visibility="Visible"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>

                        <ListView.Template>
                            <ControlTemplate>
                                <ScrollViewer>
                                    <ItemsPresenter/>
                                </ScrollViewer>
                            </ControlTemplate>
                        </ListView.Template>
                    </ListView>
                </Border>

                <!-- Footer -->
                <Border Grid.Row="2" 
                        Background="#F5F7FA"
                        CornerRadius="8"
                        Padding="15">
                    <StackPanel>
                        <TextBlock Text="Gestion de Véhicules" 
                                   FontSize="12"
                                   Foreground="#757575"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Right Panel: Vehicle Details -->
        <!-- Right Panel: Enhanced Vehicle Details -->
        <Border 
    Margin="850,20,10,20" 
    Background="White"
    CornerRadius="16"
    BorderBrush="#E0E0E0"
    BorderThickness="1"
    Padding="0"
    Effect="{StaticResource ShadowEffect}" 
    Grid.ColumnSpan="2" >
            <Grid Margin="0,0,0,0" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header with Gradient Background -->
                <Border Grid.Row="0" 
                Background="#F5F7FA"
                CornerRadius="16,16,0,0"
                Padding="24,20">
                    <StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="🚗 Détails du Véhicule" 
                                   FontSize="26"
                                   FontWeight="Bold"
                                   Foreground="#1A237E">
                                    <TextBlock.Effect>
                                        <DropShadowEffect Color="#1A237E" 
                                                  BlurRadius="0" 
                                                  ShadowDepth="0" 
                                                  Opacity="0.1"/>
                                    </TextBlock.Effect>
                                </TextBlock>
                                <TextBlock Text="Gérez votre flotte de véhicules" 
                                   FontSize="13"
                                   Foreground="#757575"
                                   Margin="0,5,0,0"/>
                            </StackPanel>
                        </Grid>

                        <!-- Enhanced Subtitle with Icon -->
                        <Border Background="White"
                        CornerRadius="8"
                        Padding="16,12"
                        Margin="0,15,0,0"
                        BorderBrush="#E0E0E0"
                        BorderThickness="1">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0"
                                Background="#2196F3"
                                Width="40"
                                Height="40"
                                CornerRadius="8"
                                Margin="0,0,12,0">
                                    <TextBlock Text="📝" 
                                       FontSize="20"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                                </Border>

                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="Ajouter/Modifier un Véhicule" 
                                       FontSize="16"
                                       FontWeight="SemiBold"
                                       Foreground="#212121"/>
                                    <TextBlock Text="Remplissez les informations ci-dessous" 
                                       FontSize="12"
                                       Foreground="#9E9E9E"
                                       Margin="0,2,0,0"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Form with Better Spacing -->
                <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto"
                      Padding="10,20">
                    <StackPanel>
                        <!-- Type de véhicule with Icon -->
                        <Border Background="#FAFAFA"
                        CornerRadius="12"
                        Padding="15"
                        Margin="0,0,0,0"
                        BorderBrush="#E0E0E0"
                        BorderThickness="1">
                            <StackPanel>
                                <Grid Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0"
                                       Text="🚙" 
                                       FontSize="20"
                                       VerticalAlignment="Center"
                                       Margin="0,0,10,0"/>
                                    <TextBlock Grid.Column="1"
                                       Text="Type de véhicule"  
                                       FontSize="15" 
                                       FontWeight="SemiBold"
                                       Foreground="#424242" 
                                       VerticalAlignment="Center"/>
                                </Grid>

                                <ComboBox SelectedValue="{Binding TypeVehicule, UpdateSourceTrigger=PropertyChanged}" 
                                  SelectedValuePath="Content" 
                                  Height="30"
                                  FontSize="14"
                                  Padding="12,0"
                                  BorderThickness="2"
                                  BorderBrush="#E0E0E0" VerticalContentAlignment="Center">
                                    <ComboBoxItem Content="Voiture" IsSelected="True"/>
                                    <ComboBoxItem Content="Moto"/>
                                    <ComboBoxItem Content="Camion"/>
                                </ComboBox>
                            </StackPanel>
                        </Border>

                        <!-- Marque & Modèle in Grid Layout -->
                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="15"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Marque -->
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Marque" 
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Foreground="#424242"
                                   Margin="0,0,0,8"/>
                                <Border Background="White"
                                BorderBrush="#BDBDBD"
                                BorderThickness="2"
                                CornerRadius="8">
                                    <TextBox Text="{Binding Marque, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource ModernTextBox}"
                                     BorderThickness="0"
                                     Height="44"
                                     Padding="12,0"
                                     FontSize="14"
                                     VerticalContentAlignment="Center"/>
                                </Border>
                            </StackPanel>

                            <!-- Modèle -->
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Modèle" 
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Foreground="#424242"
                                   Margin="0,0,0,8"/>
                                <Border Background="White"
                                BorderBrush="#BDBDBD"
                                BorderThickness="2"
                                CornerRadius="8">
                                    <TextBox Text="{Binding Modele, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource ModernTextBox}"
                                     BorderThickness="0"
                                     Height="44"
                                     Padding="12,0"
                                     FontSize="14"
                                     VerticalContentAlignment="Center"/>
                                </Border>
                            </StackPanel>
                        </Grid>

                        <!-- Dynamic Fields with Better Styling -->
                        <Border Background="#FFF3E0"
                        CornerRadius="12"
                        Padding="20"
                        Margin="0,0,0,20"
                        BorderBrush="#FFB74D"
                        BorderThickness="1">
                            <StackPanel>
                                <TextBlock Text="ℹ️ Informations Spécifiques" 
                                   FontSize="15"
                                   FontWeight="SemiBold"
                                   Foreground="#E65100"
                                   Margin="0,0,0,15"/>

                                <!-- Nombre de places (Voiture) -->
                                <StackPanel Visibility="{Binding TypeVehicule, 
                                                 Converter={StaticResource TypeToVisibilityConverter}, 
                                                 ConverterParameter=Voiture}">
                                    <TextBlock Text="Nombre de places" 
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       Foreground="#424242"
                                       Margin="0,0,0,8"/>
                                    <Border Background="White"
                                    BorderBrush="#FFB74D"
                                    BorderThickness="2"
                                    CornerRadius="8">
                                        <TextBox Text="{Binding NomberPlaces}" 
                                         Style="{StaticResource ModernTextBox}"
                                         BorderThickness="0"
                                         Height="44"
                                         Padding="12,0"
                                         FontSize="14"
                                         VerticalContentAlignment="Center"/>
                                    </Border>
                                </StackPanel>

                                <!-- Cylindrée (Moto) -->
                                <StackPanel Visibility="{Binding TypeVehicule, 
                                                 Converter={StaticResource TypeToVisibilityConverter}, 
                                                 ConverterParameter=Moto}">
                                    <TextBlock Text="Cylindrée (cc)" 
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       Foreground="#424242"
                                       Margin="0,0,0,8"/>
                                    <Border Background="White"
                                    BorderBrush="#FFB74D"
                                    BorderThickness="2"
                                    CornerRadius="8">
                                        <TextBox Text="{Binding Cylindree}" 
                                         Style="{StaticResource ModernTextBox}"
                                         BorderThickness="0"
                                         Height="44"
                                         Padding="12,0"
                                         FontSize="14"
                                         VerticalContentAlignment="Center"/>
                                    </Border>
                                </StackPanel>

                                <!-- Capacité de charge (Camion) -->
                                <StackPanel Visibility="{Binding TypeVehicule, 
                                                 Converter={StaticResource TypeToVisibilityConverter}, 
                                                 ConverterParameter=Camion}">
                                    <TextBlock Text="Capacité de charge (tonnes)" 
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       Foreground="#424242"
                                       Margin="0,0,0,8"/>
                                    <Border Background="White"
                                    BorderBrush="#FFB74D"
                                    BorderThickness="2"
                                    CornerRadius="8">
                                        <TextBox Text="{Binding CapaciteCharge}" 
                                         Style="{StaticResource ModernTextBox}"
                                         BorderThickness="0"
                                         Height="44"
                                         Padding="12,0"
                                         FontSize="14"
                                         VerticalContentAlignment="Center"/>
                                    </Border>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Separator Line -->
                        <Border Height="1" 
                        Background="#E0E0E0" 
                        Margin="0,10,0,20"/>

                        <!-- Action Buttons -->
                        <StackPanel Orientation="Horizontal" Margin="0 20 0 0">
                            <Button Content="➕ Ajouter" 
                             Style="{StaticResource ModernButton}"
                             Background="#4CAF50"
                             Width="120" Command="{Binding AjouterVehicules}"/>
                             <Button Content="✏️ Modifier" 
                            Style="{StaticResource ModernButton}"
                            Width="120"
                            Command="{Binding ModifierVehicule}"/>
                            <Button Content="🗑️ Supprimer" 
                            Style="{StaticResource ModernButton}"
                            Background="#F44336"
                            Width="120"
                            Command="{Binding SupprimerVehicule}"/>
                        </StackPanel>
                        <!-- Help Text -->
                        <Border Background="#E3F2FD"
                        CornerRadius="8"
                        Padding="12"
                        Margin="0,15,0,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="💡" 
                                   FontSize="16"
                                   Margin="0,0,8,0"
                                   VerticalAlignment="Center"/>
                                <TextBlock Text="Conseil: Tous les champs sont requis pour ajouter un véhicule" 
                                   FontSize="12"
                                   Foreground="#1565C0"
                                   TextWrapping="Wrap"
                                   VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</Window>